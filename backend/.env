# PR Business 后端环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# ============================================
# 应用配置
# ============================================
APP_ENV=development
APP_PORT=8080
APP_NAME="PR Business"
APP_DEBUG=true

# ============================================
# 数据库配置
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=pr_business
DB_PASSWORD=your_password_here
DB_NAME=pr_business
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600

# ============================================
# Redis配置
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# ============================================
# JWT配置
# ============================================
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE=24h
JWT_REFRESH_TOKEN_EXPIRE=168h  # 7 days

# ============================================
# Auth Center配置
# ============================================
AUTH_CENTER_URL=http://os.crazyaigc.com
AUTH_CENTER_API_KEY=your_api_key_here
AUTH_CENTER_REDIRECT_URI=http://localhost:8080/api/v1/auth/callback

# ============================================
# 文件存储配置
# ============================================
UPLOAD_MAX_SIZE=5242880  # 5MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ============================================
# 前端配置（用于CORS）
# ============================================
FRONTEND_URL=http://localhost:5173
